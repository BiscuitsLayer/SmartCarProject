{
    "configurations": [
        {
            "name": "(MSVC) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_msvc/Debug/SmartCarMain.exe",
            "args": ["${workspaceFolder}/config.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build_msvc",
            "environment": [],
            "console": "externalTerminal"
        },
    {
        "name": "(GCC) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build_gcc/SmartCarMain.exe",
        "args": ["${workspaceFolder}/config.json"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build_gcc",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\TDM-GCC-64\\bin\\gdb.exe",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}